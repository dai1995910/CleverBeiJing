<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dwb.zhbj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <RadioButton
            android:id="@+id/rb_home"
            android:drawableTop="@drawable/btn_tab_home_selector"
             style="@style/TabStyle"
            android:text="首页" 
            />

        <RadioButton
            android:id="@+id/rb_news_center"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_news_selector"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_smart_service"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_smart_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_gover"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_gov_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_setting_selector"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>